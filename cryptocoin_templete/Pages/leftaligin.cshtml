@page
@model cryptocoin_templete.Pages.leftaliginModel
@{
}

<div class="container-fluid bg-white">

    <div class="row">
        <div class="col-6">
            <h3 class="text-center text-black"> LEFT ALIGIN FORM</h3>
            <!-- Form START -->
            <form method="post">
               
                <div class="col-12">
                    <label class="form-label" for="EName">Employee Name</label>
                    <input type="text" class="form-control" id="EName" placeholder="Employee Name" required>
                </div>
                <div class="col-12">
                    <label class="form-label" for="LName">Last Name</label>
                    <input type="text" class="form-control" id="LName" placeholder="Last Name" readonly>
                </div>

                <div class="col-12">
                    <label class="form-label" for="position">position</label>
                    <select class="form-control rounded-0" id="position" required>
                        <option value="">-- Select Type --</option>
                        <option value="AC">Accountant</option>
                        <option value=RE>Receptionist</option>
                        <option value=AD>Administrator</option>
                        <option value="SV">Supervisor</option>
                    </select>
                </div>
                <br />
                <div class="col-12">
                    <input type="checkbox" class="form-check-input" name="ft" />Full-Time
                    <input type="checkbox" class="form-check-input" name="pt" />part-Time
                    <input type="checkbox" class="form-check-input" name="ct" />Contract

                </div>
                <br />
                <div class="col-12">
                    <input type="radio" name="estatus" value="Employed" />Employed
                    <input type="radio" name="estatus" value="UnEmployed" />UnEmployed
                    <input type="radio" name="estatus" value="Student" />Student
                </div>

                <div class="col-12">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" placeholder="Description" required></textarea>
                </div>
                <br />

                <div class="row align-items-center">
                    <div class="col-12">
                        <center>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-warning">reset</button>
                        </center>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
